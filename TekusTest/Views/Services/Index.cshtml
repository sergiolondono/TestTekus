
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/Views/Service.js"></script>

<div class="container">
    <fieldset>
        <legend>Servicios</legend>

        <a href="#divListService" data-toggle="collapse" class="btn active">
            Consultar <i class="glyphicon glyphicon-chevron-down"></i>
        </a>

        <div id="divListService" class="collapse in">
            <fieldset>
                <legend>Consultar</legend>
                <br />
                <div id="tableContainer">
                </div>
            </fieldset>
        </div>

        <a href="#divCreateService" data-toggle="collapse" class="btn active">
            Crear <i class="glyphicon glyphicon-chevron-down"></i>
        </a>
        <div id="divCreateService" class="collapse">
            <fieldset>
                <legend>Crear</legend>

                <div class="form-group">
                    <input type="text" name="txtNombre" id="txtNombre" required
                           placeholder="Nombre Servicio" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="number" name="txtValorHora" id="txtValorHora" required
                           placeholder="Valor Hora (US)" class="form-control" />
                </div>

                <div class="form-group">
                    @Html.DropDownList("cliente", ViewBag.cliente as List<SelectListItem>,
                                           new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <input type="button" name="btnGuardar" id="btnGuardar" onclick="saveService()"
                           value="Guardar Servicio" class="btn btn-success btn-block" />
                </div>
            </fieldset>
        </div>

        <a href="#divUpdateService" data-toggle="collapse" class="btn active">
            Modificar <i class="glyphicon glyphicon-chevron-down"></i>
        </a>
        <div id="divUpdateService" class="collapse">
            <fieldset>
                <legend>Modificar</legend>

                <div class="form-group">
                    <input type="text" name="txtNombreUpdate" id="txtNombreUpdate" required
                           placeholder="Nombre servicio" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="number" name="txtValorHoraUpdate" id="txtValorHoraUpdate" required
                           placeholder="Valor hora (US)" class="form-control" />
                </div>

                <div class="form-group">
                    @Html.DropDownList("clientToModify", ViewBag.cliente as List<SelectListItem>,
                    new { @class = "form-control" })

                </div>

                <div class="form-inline">
                    <div class="form-group">
                        @Html.DropDownList("serviceToModify", ViewBag.servicio as List<SelectListItem>,
                                          new { @class = "form-control" })

                        @*<input type="text" name="txtIdToUpdate" id="txtIdToUpdate" required
                            placeholder="Nit a modificar" class="form-control" />*@
                    </div>

                    <div class="form-group">
                        <input type="button" name="btnUpdateClient" id="btnUpdateClient" onclick="updateService()"
                               value="Modificar Cliente" class="btn btn-warning btn-block" />
                    </div>
                </div>

            </fieldset>
        </div>

    </fieldset>
</div>

